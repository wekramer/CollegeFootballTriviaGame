<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.collegefootball.triviagame"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/football_orginal_app1"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.collegefootball.triviagame.MainActivity"
             android:screenOrientation="portrait"
        android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
                
        <activity
            android:name="com.collegefootball.triviagame.ScoresList"
             android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.triviaame.SCORESLIST" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>    
        </activity> 
        
         <activity
            android:name="com.collegefootball.triviagame.ExitGame"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.triviaame.EXITGAME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>    
        </activity> 
        
          <activity
            android:name="com.collegefootball.triviagame.Feedback"
             android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.triviaame.FEEDBACK" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>    
        </activity> 
        
    </application>

</manifest>



