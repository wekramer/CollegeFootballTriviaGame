<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/exit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/ncaa_blue"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Exit" />

    <TextView
        android:id="@+id/activity_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_above="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/ncaa_blue"
        android:text="Help/Feedback"
        android:textSize="20sp"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/email_support"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/ncaa_blue"
        android:textColor="@color/white"
        android:layout_alignLeft="@+id/activity_help"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/activity_help"
        android:layout_marginTop="33dp"
        android:text="Send Email Feedback" />

    <Button
        android:id="@+id/website"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/email_support"
        android:layout_alignRight="@+id/email_support"
        android:background="@color/ncaa_blue"
        android:textColor="@color/white"
        android:layout_below="@+id/email_support"
        android:layout_marginTop="19dp"
        android:text="Go To App Website" />

    <Button
        android:id="@+id/youtube_help"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/ncaa_blue"
        android:textColor="@color/white"
        android:layout_alignLeft="@+id/website"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/website"
        android:layout_marginTop="20dp"
        android:text="YouTube Help - How To Run App" />

</RelativeLayout>
